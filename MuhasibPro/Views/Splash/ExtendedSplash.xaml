        <!-- Double layer dots animation (unchanged) -->
        <Storyboard x:Name="DoubleLayerDotsStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation
                AutoReverse="False"
                Duration="0:0:2"
                From="0"
                Storyboard.TargetName="TopDotsTransform"
                Storyboard.TargetProperty="(TranslateTransform.X)"
                To="-60" />
            <DoubleAnimation
                AutoReverse="False"
                Duration="0:0:1.8"
                From="15"
                Storyboard.TargetName="BottomDotsTransform"
                Storyboard.TargetProperty="(TranslateTransform.X)"
                To="-45" />
        </Storyboard>

