<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MuhasibPro.Views.Loggings.SistemLogsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MuhasibPro.Views.Loggings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewsList="using:MuhasibPro.Views.Loggings.List"
    xmlns:viewsDetails="using:MuhasibPro.Views.Loggings.Details"
    xmlns:controls="using:MuhasibPro.Controls"
    
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="ListHeaderTemplate">
            <StackPanel Margin="6,4,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Uygulama ve Hizmet Günlükleri" FontSize="18" />
                <TextBlock Text="{Binding}" FontSize="18"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid
        BorderThickness="1,0,0,0">
        <controls:WindowTitle Prefix="Uygulama Olay Görüntüleyicisi" Title="{x:Bind ViewModel.SistemLogList.Title, Mode=OneWay}" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--AppLogs-->
            <Grid Grid.RowSpan="{x:Bind GetRowSpan(ViewModel.SistemLogList.IsMultipleSelection), Mode=OneWay}">
                <controls:Section Header="{x:Bind ViewModel.SistemLogList.Title, Mode=OneWay}" HeaderTemplate="{StaticResource ListHeaderTemplate}" HeaderButtonGlyph="&#xE2B4;" HeaderButtonClick="OpenInNewView" IsButtonVisible="{x:Bind ViewModel.IsMainWindow}">
                    <viewsList:SistemLogsList ViewModel="{x:Bind ViewModel.SistemLogList}" />
                </controls:Section>
            </Grid>

            <!--Details-->
            <Grid Grid.Row="1" 
                BorderBrush="{ThemeResource ApplicationPressedForegroundThemeBrush}"
                BorderThickness="0,1,0,0" 
                Visibility="{x:Bind ViewModel.SistemLogList.IsMultipleSelection, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <controls:Section IsEnabled="{x:Bind ViewModel.SistemLogDetails.IsEnabled, Mode=OneWay}"                                 
                                Visibility="{x:Bind ViewModel.SistemLogDetails.IsDataAvailable, Mode=OneWay}">
                    <viewsDetails:SistemLogsDetails Grid.Row="1" ViewModel="{x:Bind ViewModel.SistemLogDetails}" />
                </controls:Section>

                <!--Empty Details-->
                <controls:Section 
                    Header="Detay için seçim yapın" Visibility="{x:Bind ViewModel.SistemLogDetails.IsDataUnavailable, Mode=OneWay}" />
            </Grid>
        </Grid>
    </Grid>
</Page>
