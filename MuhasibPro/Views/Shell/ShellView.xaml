<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MuhasibPro.Views.Shell.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:contols="using:MuhasibPro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MuhasibPro.Views.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
                x:Name="AppTitleBar"
                Height="20"
                Margin="0 5"
                VerticalAlignment="Top"
                Canvas.ZIndex="1"
                IsHitTestVisible="True">
                <TextBlock
                    x:Name="AppTitleBarText"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    TextWrapping="NoWrap"
                    x:FieldModifier="public" />                
            </Grid>
            <Grid Grid.Row="1">
                
                <Frame x:Name="frame" IsEnabled="{x:Bind ViewModel.IsEnabled, Mode=OneWay}">
                    <Frame.ContentTransitions>
                        <TransitionCollection>
                            <NavigationThemeTransition />
                        </TransitionCollection>
                    </Frame.ContentTransitions>
                </Frame>
            </Grid>
            <Grid Grid.Row="2">
                <Rectangle Fill="{StaticResource Error}" Visibility="{x:Bind ViewModel.IsError,Mode=OneWay}" />
                <local:ShellStatusBar                   
                    />
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Visibility="{x:Bind ViewModel.IsLocked, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Center">
                <Image Width="640" Source="ms-appx:///Assets/SplashScreen.scale-200.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Text="Uygulama kilitli" />
                <HyperlinkButton
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="OnUnlockClick"
                    Content="Kilidi açmak için ana görünüme geçin"
                    FontSize="18"
                    Foreground="White" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
