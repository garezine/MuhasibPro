<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MuhasibPro.Views.Shell.ShellStatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MuhasibPro.Views.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        x:Name="StatusBar"
        Height="32"
        Background="{ThemeResource LayerFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="0,1,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Sol taraf - Durum mesajları -->
        <StackPanel
            Grid.Column="0"
            Margin="12,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="8">

            <!-- Durum ikonu - Otomatik tip değişimi -->
            <FontIcon
                x:Name="StatusIcon"
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                FontSize="14"
                Foreground="{x:Bind StatusBrush, Mode=OneWay}"
                Glyph="{x:Bind StatusGlyph, Mode=OneWay}"
                Visibility="{x:Bind ShowStatusIcon, Mode=OneWay}" />

            <!-- Durum metni - Renk otomatik değişir -->
            <TextBlock
                x:Name="StatusText"
                VerticalAlignment="Center"
                FontSize="12"
                Foreground="{x:Bind StatusBrush, Mode=OneWay}"
                Text="{x:Bind StatusMessage, Mode=OneWay}"
                TextTrimming="CharacterEllipsis" />

            <!-- Progress Ring -->
            <ProgressRing
                x:Name="StatusProgressRing"
                Width="16"
                Height="16"
                IsActive="{x:Bind IsStatusProgress, Mode=OneWay}"
                Visibility="{x:Bind IsStatusProgress, Mode=OneWay}" />

            <!-- Progress Bar (Yüzdelik) -->
            <StackPanel
                Orientation="Horizontal"
                Spacing="8"
                Visibility="{x:Bind ShowProgressBar, Mode=OneWay}">

                <ProgressBar
                    x:Name="StatusProgressBar"
                    Width="120"
                    Height="4"
                    VerticalAlignment="Center"
                    IsIndeterminate="{x:Bind IsProgressIndeterminate, Mode=OneWay}"
                    Maximum="100"
                    Value="{x:Bind ProgressValue, Mode=OneWay}" />

                <!-- Yüzde gösterimi -->
                <TextBlock
                    FontSize="11"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="{x:Bind ProgressText, Mode=OneWay}"
                    VerticalAlignment="Center"
                    Visibility="{x:Bind ShowProgressPercent, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>

        <!-- Orta alan - Ek bilgiler -->
        <StackPanel
            Grid.Column="1"
            Margin="16,0"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="16">

            <!-- Kullanıcı bilgisi -->
            <StackPanel
                Orientation="Horizontal"
                Spacing="6"
                Visibility="{x:Bind ShowUserInfo, Mode=OneWay}">

                <FontIcon
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Glyph="&#xE77B;" />

                <TextBlock
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Text="{x:Bind UserName, Mode=OneWay}" />
            </StackPanel>

            <!-- Separator -->
            <Border
                Width="1"
                Height="16"
                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                Visibility="{x:Bind ShowDatabaseInfo, Mode=OneWay}" />

            <!-- Database durumu -->
            <StackPanel
                Orientation="Horizontal"
                Spacing="6"
                Visibility="{x:Bind ShowDatabaseInfo, Mode=OneWay}">

                <FontIcon
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="12"
                    Foreground="{x:Bind DatabaseIconBrush, Mode=OneWay}"
                    Glyph="&#xE968;" />

                <TextBlock
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Text="{x:Bind DatabaseConnectionMessage, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>

        <!-- Sağ taraf - Sistem ikonları ve zaman -->
        <StackPanel
            Grid.Column="2"
            Margin="0,0,12,0"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="12">

            <!-- Kayıt durumu -->
            <FontIcon
                x:Name="SaveStatusIcon"
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                FontSize="14"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                Glyph="&#xE74E;"
                ToolTipService.ToolTip="Kayıt yapılıyor..."
                Visibility="{x:Bind IsSaveStatus, Mode=OneWay}">
                <FontIcon.Transitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </FontIcon.Transitions>
            </FontIcon>

            <!-- Separator -->
            <Border
                Width="1"
                Height="16"
                Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

            <!-- Zaman gösterimi -->
            <TextBlock
                x:Name="TimeDisplay"
                MinWidth="55"
                VerticalAlignment="Center"
                FontFamily="Consolas"
                FontSize="12"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                TextAlignment="Right" />
        </StackPanel>
    </Grid>
</UserControl>