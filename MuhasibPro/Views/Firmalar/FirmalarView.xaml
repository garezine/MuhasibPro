<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MuhasibPro.Views.Firmalar.FirmalarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MuhasibPro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MuhasibPro.Views.Firmalar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewDetails="using:MuhasibPro.Views.Firmalar.Details"
    xmlns:viewLists="using:MuhasibPro.Views.Firmalar.List"
    xmlns:windowtitle="using:MuhasibPro.Helpers.Common"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="ListHeaderTemplate">
            <StackPanel
                Margin="6,4,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock FontSize="18" Text="Firmalar" Foreground="{ThemeResource ApplicationForegroundThemeBrush}" />
                <TextBlock FontSize="18" Text="{Binding}" Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <windowtitle:WindowTitle Prefix="Firmalar" Title="{x:Bind ViewModel.Title, Mode=OneWay}" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--firmalar-->
            <Grid Grid.RowSpan="{x:Bind GetRowSpan(ViewModel.FirmaList.IsMultipleSelection), Mode=OneWay}">
                <Border Style="{StaticResource GlassPanel}">
                    <controls:Section
                    Header="{x:Bind ViewModel.FirmaList.Title, Mode=OneWay}"
                    HeaderButtonClick="OpenInNewView"
                    HeaderButtonGlyph="&#xE2B4;"
                    HeaderTemplate="{StaticResource ListHeaderTemplate}"
                    IsButtonVisible="{x:Bind ViewModel.IsMainWindow}">
                        <viewLists:FirmalarList ViewModel="{x:Bind ViewModel.FirmaList}" />
                    </controls:Section>
                </Border>
            </Grid>

            <!--Details-->
            <Grid
                Grid.Row="1"
                BorderBrush="{StaticResource ApplicationPressedForegroundThemeBrush}"
                BorderThickness="0,0,0,0"
                Visibility="{x:Bind ViewModel.FirmaList.IsMultipleSelection, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <controls:Section
                    HeaderButtonClick="OpenDetailsInNewView"
                    HeaderButtonGlyph="&#xE2B4;"
                    IsEnabled="{x:Bind ViewModel.FirmaDetails.IsEnabled, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.FirmaDetails.IsDataAvailable, Mode=OneWay}">

                    <Pivot x:Name="pivot">
                        <PivotItem Header="Firmalar">
                            <viewDetails:FirmalarDetails ViewModel="{x:Bind ViewModel.FirmaDetails}" />
                        </PivotItem>
                        <PivotItem Header="Dönemler">
                            <viewDetails:FirmaCalismaDonemler ViewModel="{x:Bind ViewModel.FirmaCalismaDonemler}" />
                        </PivotItem>
                    </Pivot>
                </controls:Section>

                <!--Empty Details-->
                <controls:Section Header="Öğe seçilmedi" Visibility="{x:Bind ViewModel.FirmaDetails.IsDataUnavailable, Mode=OneWay}" />
            </Grid>
        </Grid>
    </Grid>
</Page>
