<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MuhasibPro.Views.Firma.FirmaDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MuhasibPro.Controls"
    xmlns:converters="using:MuhasibPro.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MuhasibPro.ViewModels.ViewModels.Firmalar"
    xmlns:views="using:MuhasibPro.Views.Firma"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BindingTypeConverter x:Key="BindingTypeConverter" />
        <DataTemplate x:Key="DetailsTemplate" x:DataType="viewmodels:FirmaDetailsViewModel">
            <Border Style="{StaticResource GlassPanel}">
                <controls:FluidGrid
                    Margin="12,18,6,6"
                    Columns="2"
                    ColumnSpacing="12"
                    RowSpacing="12"
                    controls:ValidationBehavior.Errors="{x:Bind ValidationErrors,Mode=OneWay}">
                    <TextBlock
                        controls:FluidGrid.ColumnSpan="2"
                        Style="{StaticResource FormsSection}"
                        Text="Firma Bilgileri" />

                    <controls:FormTextBox Header="Kısa Ünvan"  Text="{x:Bind EditableItem.KisaUnvani,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                         controls:ValidationHelper.PropertyName="KisaUnvani"
                                          MaxLength="11">
                       
                    </controls:FormTextBox>
                    <controls:FormTextBox Header="Tam Ünvan" Text="{x:Bind EditableItem.TamUnvani,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />

                    <controls:FluidGrid
                        Columns="2"
                        ColumnSpacing="6"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox Header="Yetkili Kişi" Text="{x:Bind EditableItem.YetkiliKisi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              controls:ValidationHelper.PropertyName="YetkiliKisi"/>
                        <controls:FormTextBox Header="Telefon" DataType="Phone" Text="{x:Bind EditableItem.Telefon1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              controls:ValidationHelper.PropertyName="Telefon1"/>
                    </controls:FluidGrid>
                    <controls:FluidGrid
                        Columns="2"
                        ColumnSpacing="6"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox Header="TCK No" Text="{x:Bind EditableItem.TCNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox Header="Para Birimi" Text="{x:Bind EditableItem.PBu1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>

                    <TextBlock
                        controls:FluidGrid.ColumnSpan="2"
                        Style="{StaticResource FormsSection}"
                        Text="Adres / Fatura Bilgileri" />

                    <controls:FluidGrid
                        Columns="2"
                        ColumnSpacing="6"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox Header="İl" Text="{x:Bind EditableItem.Il, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox Header="İlçe" Text="{x:Bind EditableItem.Ilce, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>

                    <controls:FluidGrid
                        Columns="2"
                        ColumnSpacing="6"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox
                            DataType="Integer"
                            Header="Posta Kodu"
                            Text="{x:Bind EditableItem.PostaKodu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox Header="Telefon 2" Text="{x:Bind EditableItem.Telefon2, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>

                    <controls:FormTextBox
                        AcceptsReturn="True"
                        controls:FluidGrid.ColumnSpan="2"
                        Header="Adres"
                        Text="{x:Bind EditableItem.Adres, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />

                    <controls:FluidGrid
                        Columns="2"
                        ColumnSpacing="6"
                        MinColumnWidth="60"
                        RowSpacing="12">
                        <controls:FormTextBox
                            DataType="Integer"
                            Header="Vergi No"
                            Text="{x:Bind EditableItem.VergiNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:FormTextBox Header="Vergi Dairesi" Text="{x:Bind EditableItem.VergiDairesi, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    </controls:FluidGrid>
                    <controls:FormTextBox Header="E-Posta" Text="{x:Bind EditableItem.Eposta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                </controls:FluidGrid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border>
            <views:FirmaCard
                Margin="6"
                Item="{x:Bind ViewModel.Item, Mode=OneWay}"
                ViewModel="{x:Bind ViewModel}" />
        </Border>

        <controls:Details
            x:Name="details"
            Grid.Column="1"
            Margin="6"
            BackCommand="{x:Bind ViewModel.BackCommand}"
            CancelCommand="{x:Bind ViewModel.CancelCommand}"
            CanGoBack="{x:Bind ViewModel.CanGoBack}"
            DeleteCommand="{x:Bind ViewModel.DeleteCommand}"
            DetailsContent="{x:Bind ViewModel}"
            DetailsTemplate="{StaticResource DetailsTemplate}"
            EditCommand="{x:Bind ViewModel.EditCommand}"
            IsEditMode="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
            SaveCommand="{x:Bind ViewModel.SaveCommand}" />
    </Grid>
</UserControl>