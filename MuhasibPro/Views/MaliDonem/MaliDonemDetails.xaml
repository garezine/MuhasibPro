<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MuhasibPro.Views.MaliDonem.MaliDonemDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MuhasibPro.Controls"
    xmlns:converters="using:MuhasibPro.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MuhasibPro.Views.MaliDonem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MuhasibPro.ViewModels.ViewModels.SistemViewModel.MaliDonemler"
    xmlns:views="using:MuhasibPro.Views.MaliDonem"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BindingTypeConverter x:Key="BindingTypeConverter" />
        <DataTemplate x:Key="DetailsTemplate" x:DataType="viewmodels:MaliDonemDetailsViewModel">

            <Border Style="{StaticResource GlassPanel}">
                <controls:FluidGrid
                    Margin="12,18,6,6"
                    Columns="2"
                    ColumnSpacing="12"                    
                    RowSpacing="12">
                    <TextBlock
                        controls:FluidGrid.ColumnSpan="2"
                        Style="{StaticResource FormsSection}"
                        Text="Mali Dönem Bilgileri" />
                    <NumberBox
                        x:Name="MaliYilNumberBox"
                        Width="360"
                        HorizontalAlignment="Left"
                        Value="{x:Bind EditableItem.MaliYil, Mode=TwoWay}"
                        controls:FluidGrid.ColumnSpan="2"
                        Header="Mali Dönem Yılı"
                        LargeChange="5"
                        Maximum="2030"
                        Minimum="2020"
                        PlaceholderText="Yıl giriniz"
                        SmallChange="1"
                        SpinButtonPlacementMode="Inline" />
                    <TextBlock
                        Margin="0 5 0 0"
                        controls:FluidGrid.ColumnSpan="2"
                        Style="{StaticResource FormsSection}"
                        Text="Veritabanı Bilgileri" />
                    <controls:FormTextBox                        
                        Header="Veritabanı Adı"
                        Mode="ReadOnly"
                        Text="{x:Bind EditableItem.DBName, Mode=TwoWay}" />
                    <controls:FormTextBox
                        Header="Veritabanı Tipi"
                       Mode="ReadOnly"
                        Text="{x:Bind EditableItem.DatabaseType, Mode=TwoWay}" />
                    <controls:FormTextBox
                        Header="Veritabanı Klasör"
                        Mode="ReadOnly"
                        Text="{x:Bind EditableItem.DBPath,Mode=TwoWay}" />
                    <controls:FormTextBox
                        Header="Veritabanı Yolu"
                        Mode="ReadOnly"
                        Text="{x:Bind EditableItem.Directory, Mode=TwoWay}" />

                </controls:FluidGrid>



            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border>
            <views:MaliDonemCard Margin="6" Item="{x:Bind ViewModel.Item, Mode=OneWay}" />
        </Border>

        <controls:Details
            x:Name="details"
            Grid.Column="1"
            Margin="6"
            BackCommand="{x:Bind ViewModel.BackCommand}"
            CancelCommand="{x:Bind ViewModel.CancelCommand}"
            CanGoBack="{x:Bind ViewModel.CanGoBack}"
            DeleteCommand="{x:Bind ViewModel.DeleteCommand}"
            DetailsContent="{x:Bind ViewModel}"
            DetailsTemplate="{StaticResource DetailsTemplate}"
            EditCommand="{x:Bind ViewModel.EditCommand}"
            IsEditMode="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
            SaveCommand="{x:Bind ViewModel.SaveCommand}" />
    </Grid>
</UserControl>