<?xml version="1.0" encoding="utf-8" ?>
<Application x:Class="MuhasibPro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:MuhasibPro.Converters"
             xmlns:local="using:MuhasibPro">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Styles/FontSizes.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Thickness.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/TextBlock.xaml" />

                <ResourceDictionary Source="ms-appx:///Styles/Buttons.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/CalendarPicker.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/DataGrid.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/PivotHeaderItem.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Sections.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/ToolBar.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Cards.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/ProgressRingStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->

            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" FalseValue="Collapsed" TrueValue="Visible" />
            <converters:BoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" FalseValue="Visible" TrueValue="Collapsed" />
            <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
            <converters:DateTimeFormatConverter x:Key="DateTimeFormatConverter" />
            <converters:DateTimeOffsetConverter x:Key="DateTimeOffsetConverter" />
            <converters:DecimalConverter x:Key="DecimalConverter" />
            <converters:DoubleConverter x:Key="DoubleConverter" />
            <converters:Int16Converter x:Key="Int16Converter" />
            <converters:Int32Converter x:Key="Int32Converter" />
            <converters:Int64Converter x:Key="Int64Converter" />
            <converters:LogTypeConverter x:Key="LogTypeConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:ObjectToImageConverter x:Key="ObjectToImageConverter" />
            <converters:GlyphToIconConverter x:Key="GlyphToIconConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />


            <SolidColorBrush x:Key="Information" Color="RoyalBlue" />
            <SolidColorBrush x:Key="Warning" Color="#ffff00" />
            <SolidColorBrush x:Key="Error" Color="#ce0e0e" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
