<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

    <x:Double x:Key="CardPictureRadius">96</x:Double>
    <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="SmallCardCornerRadius">8</CornerRadius>
    <Thickness x:Key="CardPadding">20</Thickness>
    <Thickness x:Key="SectionPadding">16</Thickness>

    <!-- Modern Card Style -->
    <Style x:Key="ModernCard" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    <!-- Section Header Style -->
    <Style x:Key="ModernSectionHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Info Row Style -->
    <Style x:Key="InfoRow" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    <!-- Icon Style -->
    <Style x:Key="InfoIcon" TargetType="FontIcon">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!-- Label Style -->
    <Style x:Key="InfoLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <Style x:Key="InfoValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="IsTextSelectionEnabled" Value="True"/>
    </Style>

    <!-- Action Button Style -->
    <Style x:Key="ActionButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{ThemeResource AccentControlElevationBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCardCornerRadius}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>
    
</ResourceDictionary>
