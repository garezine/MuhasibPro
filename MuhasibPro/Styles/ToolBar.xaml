<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Disabled State Colors -->
    <SolidColorBrush x:Key="ControlStrokeColorDisabledBrush" Color="Transparent" />
    <SolidColorBrush x:Key="ControlFillColorDisabledBrush" Color="Transparent" />
    <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="#FFAAAAAA" />

    <!-- ============================================ -->
    <!-- BASE STYLE - Modern Toolbar Button (Düzeltilmiş) -->
    <!-- ============================================ -->
    <Style x:Key="ModernToolBarButtonStyle" TargetType="AppBarButton">
        <Setter Property="Background" Value="{ThemeResource ControlFillColorTransparentBrush}" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource ControlElevationBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="42" />
        <Setter Property="UseSystemFocusVisuals" Value="True" />
        <Setter Property="AllowFocusOnInteraction" Value="False" />
        <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="AppBarButton">
                    <!-- Border EN DIŞTA - sorun çözüldü -->
                    <Border x:Name="Border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="{TemplateBinding CornerRadius}">

                        <VisualStateManager.VisualStateGroups>
                            <!-- Application View States -->
                            <VisualStateGroup x:Name="ApplicationViewStates">
                                <VisualState x:Name="FullSize" />
                                <VisualState x:Name="Compact">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextLabel" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentViewbox" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="0,10,0,10" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="LabelOnRight">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentViewbox" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="12,8,0,8" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentRoot" Storyboard.TargetProperty="MinHeight">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="40" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextLabel" Storyboard.TargetProperty="(Grid.Row)">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="0" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextLabel" Storyboard.TargetProperty="(Grid.Column)">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="1" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextLabel" Storyboard.TargetProperty="TextAlignment">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Left" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextLabel" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="8,10,12,7" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="LabelCollapsed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentViewbox" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="0,8,0,8" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentRoot" Storyboard.TargetProperty="MinHeight">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="40" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextLabel" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                            <!-- Common States - Hover animasyonu KALDIRILDI -->
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.1" />
                                </VisualStateGroup.Transitions>

                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Target="Border.Background" Value="{ThemeResource ControlFillColorTransparentBrush}" />
                                        <Setter Target="Border.BorderBrush" Value="{ThemeResource ControlElevationBorderBrush}" />
                                        <Setter Target="Content.Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
                                        <Setter Target="TextLabel.Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Border.Background" Value="{ThemeResource ControlFillColorSecondaryBrush}" />
                                        <Setter Target="Border.BorderBrush" Value="{ThemeResource ControlStrokeColorSecondaryBrush}" />
                                        <Setter Target="Content.Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
                                        <Setter Target="TextLabel.Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
                                    </VisualState.Setters>
                                    <!-- Storyboard KALDIRILDI - animasyon yok -->
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Border.Background" Value="{ThemeResource ControlFillColorTertiaryBrush}" />
                                        <Setter Target="Border.BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}" />
                                        <Setter Target="Content.Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <Setter Target="TextLabel.Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </VisualState.Setters>
                                    <!-- Storyboard KALDIRILDI - animasyon yok -->
                                </VisualState>

                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="Border.Background" Value="{ThemeResource ControlFillColorDisabledBrush}" />
                                        <Setter Target="Border.BorderBrush" Value="{ThemeResource ControlStrokeColorDisabledBrush}" />
                                        <Setter Target="Content.Foreground" Value="{ThemeResource TextFillColorDisabledBrush}" />
                                        <Setter Target="TextLabel.Foreground" Value="{ThemeResource TextFillColorDisabledBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Content Grid - RenderTransform KALDIRILDI -->
                        <Grid x:Name="ContentRoot" MinHeight="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Icon Container -->
                            <Viewbox x:Name="ContentViewbox" 
                                Height="20" 
                                Margin="0,10,0,4" 
                                HorizontalAlignment="Stretch" 
                                AutomationProperties.AccessibilityView="Raw">
                                <ContentPresenter x:Name="Content" 
                                            Height="20" 
                                            Content="{TemplateBinding Icon}" 
                                            Foreground="{TemplateBinding Foreground}"/>
                            </Viewbox>

                            <!-- Label -->
                            <TextBlock x:Name="TextLabel" 
                                  Grid.Row="1" 
                                  Text="{TemplateBinding Label}" 
                                  Foreground="{TemplateBinding Foreground}" 
                                  FontSize="12" 
                                  FontFamily="{TemplateBinding FontFamily}" 
                                  TextAlignment="Center" 
                                  TextWrapping="Wrap" 
                                  Margin="2,0,2,6" 
                                  AutomationProperties.AccessibilityView="Raw" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- COLLAPSED STYLE -->
    <!-- ============================================ -->
    <Style x:Key="ToolBarButtonCollapsedStyle" TargetType="AppBarButton" BasedOn="{StaticResource ModernToolBarButtonStyle}">
        <Setter Property="Width" Value="48" />
    </Style>

    <!-- ============================================ -->
    <!-- DANGER STYLE - Sil, İptal gibi butonlar -->
    <!-- ============================================ -->
    <Style x:Key="ToolBarButtonDanger" TargetType="AppBarButton" BasedOn="{StaticResource ModernToolBarButtonStyle}">
        <Setter Property="Foreground" Value="#E74856" />
    </Style>

    <!-- ============================================ -->
    <!-- SUCCESS STYLE - Kaydet, Onayla -->
    <!-- ============================================ -->
    <Style x:Key="ToolBarButtonSuccess" TargetType="AppBarButton" BasedOn="{StaticResource ModernToolBarButtonStyle}">
        <Setter Property="Foreground" Value="#10893E" />
    </Style>

    <!-- ============================================ -->
    <!-- PRIMARY STYLE - Ana aksiyon -->
    <!-- ============================================ -->
    <Style x:Key="ToolBarButtonPrimary" TargetType="AppBarButton" BasedOn="{StaticResource ModernToolBarButtonStyle}">
        <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}" />
    </Style>

    <!-- CommandBar Style -->
    <Style x:Key="ToolBarStyle" TargetType="CommandBar">
        <Setter Property="Background" Value="{ThemeResource CommandBarBackground}" />
        <Setter Property="Foreground" Value="{ThemeResource CommandBarForeground}" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="ClosedDisplayMode" Value="Compact" />
    </Style>

</ResourceDictionary>