<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MuhasibPro.Controls.DataList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:MuhasibPro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="800"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--Toolbar-->
        <control:ListToolbar
            ButtonClick="OnToolbarClick"
            DefaultCommands="{x:Bind DefaultCommands, Mode=OneWay}"
            NewLabel="{x:Bind NewLabel, Mode=OneWay}"
            Query="{x:Bind Query, Mode=TwoWay}"
            QuerySubmitted="OnQuerySubmitted"
            ToolbarMode="{x:Bind ToolbarMode, Mode=OneWay}" />

        <!--Header-->
        <Grid Grid.Row="1">
            <ContentControl HorizontalContentAlignment="Stretch" ContentTemplate="{x:Bind HeaderTemplate}" />
            <Border
                Margin="2,6,2,0"
                BorderBrush="{StaticResource ApplicationPressedForegroundThemeBrush}"
                BorderThickness="0,0,0,1" />
        </Grid>

        <!--List Content-->
        <Grid Grid.Row="2" >
            <ListView               
                x:Name="listview"
                DoubleTapped="OnDoubleTapped"
                ItemContainerStyle="{ThemeResource DefaultListViewItemStyle}"
                ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
                ItemTemplate="{x:Bind ItemTemplate}"
                Padding="0,6,0,0"
                SelectedItem="{x:Bind SelectedItem, Mode=TwoWay}"
                SelectionChanged="OnSelectionChanged"
                SelectionMode="{x:Bind SelectionMode, Mode=OneWay}"
                Visibility="{x:Bind IsDataAvailable, Mode=OneWay}" />
            <TextBlock
                Margin="6"
                Text="{x:Bind DataUnavailableMessage, Mode=OneWay}"
                Visibility="{x:Bind IsDataUnavailable, Mode=OneWay}" />
        </Grid>

        <!--Footer-->
        <Grid Grid.Row="3" Visibility="{x:Bind IsDataAvailable, Mode=OneWay}">
            <TextBlock
                Margin="4"
                VerticalAlignment="Bottom"
                FontSize="14"
                Opacity="0.75"
                Visibility="{x:Bind IsMultipleSelection, Mode=OneWay}">
                <Run Text="{x:Bind SelectedItemsCount, Mode=OneWay}" />
                <Run Text="öğe seçildi." />
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
