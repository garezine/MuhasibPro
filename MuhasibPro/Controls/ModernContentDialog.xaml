<ContentDialog x:Class="MuhasibPro.Controls.ModernContentDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               CornerRadius="8"
               DefaultButton="Primary">

    <ContentDialog.Resources>
        <!-- Custom ContentDialog Style -->
        <Style TargetType="ContentDialog">
            <Setter Property="Foreground" Value="{ThemeResource ContentDialogForeground}" />
            <Setter Property="Background" Value="{ThemeResource ContentDialogBackground}" />
            <Setter Property="BorderThickness" Value="{ThemeResource ContentDialogBorderWidth}" />
            <Setter Property="BorderBrush" Value="{ThemeResource ContentDialogBorderBrush}" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
    </ContentDialog.Resources>

    <!-- ContentDialog'un Title property'sine custom header veriyoruz -->
    <ContentDialog.Title>
        <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Success Icon -->
                <FontIcon x:Name="SuccessIcon"
                          Glyph="&#xE73E;"
                          Foreground="#107C10"
                          FontSize="24"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>

                <!-- Error Icon -->
                <FontIcon x:Name="ErrorIcon"
                          Glyph="&#xE783;"
                          Foreground="#D13438"
                          FontSize="24"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>

                <!-- Warning Icon -->
                <FontIcon x:Name="WarningIcon"
                          Glyph="&#xE7BA;"
                          Foreground="#FFAA44"
                          FontSize="24"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>

                <!-- Info Icon -->
                <FontIcon x:Name="InfoIcon"
                          Glyph="&#xE946;"
                          Foreground="#0078D4"
                          FontSize="24"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>

                <!-- Question Icon (Confirmation iÃ§in) -->
                <FontIcon x:Name="QuestionIcon"
                          Glyph="&#xE897;"
                          Foreground="#0078D4"
                          FontSize="24"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>

                <!-- Edit Icon -->
                <FontIcon x:Name="EditIcon"
                          Glyph="&#xE70F;"
                          Foreground="#0078D4"
                          FontSize="24"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>

                <TextBlock x:Name="TitleText"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </ContentDialog.Title>

</ContentDialog>