<!-- FormField.xaml -->
<UserControl
    x:Class="MuhasibPro.Controls.FormField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MuhasibPro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ValidationMessageStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#E74C3C" />
            <Setter Property="Margin" Value="0,4,0,0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ValidationIconStyle" TargetType="FontIcon">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#E74C3C" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="8,0,0,0" />
        </Style>
    </UserControl.Resources>

    <StackPanel Spacing="4">
        <!-- Form TextBox Container -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- TextBox -->
            <controls:FormTextBox 
                x:Name="InnerTextBox"
                Grid.Column="0"
                Header="{x:Bind Header, Mode=OneWay}"
                Text="{x:Bind Text, Mode=TwoWay}"
                PredefinedFormat="{x:Bind PredefinedFormat, Mode=OneWay}"
                DataType="{x:Bind DataType, Mode=OneWay}"
                Format="{x:Bind Format, Mode=OneWay}"
                IsRequired="{x:Bind IsRequired, Mode=OneWay}"                
                Mode="{x:Bind Mode, Mode=OneWay}"
                MaxLength="{x:Bind MaxLength, Mode=OneWay}"
                PlaceholderText="{x:Bind PlaceholderText, Mode=OneWay}" />

            <!-- Validation Icon -->
            <FontIcon 
                x:Name="ValidationIcon"
                Grid.Column="1"
                Style="{StaticResource ValidationIconStyle}"
                Glyph="&#xE783;"
                Visibility="{x:Bind ShowValidationIcon(InnerTextBox.IsValid), Mode=OneWay}" />
        </Grid>

        <!-- Validation Message -->
        <TextBlock 
            x:Name="ValidationMessage"
            Style="{StaticResource ValidationMessageStyle}"
            Text="{x:Bind InnerTextBox.ValidationMessage, Mode=OneWay}"
            Visibility="{x:Bind ShowValidationMessage(InnerTextBox.IsValid, InnerTextBox.ValidationMessage), Mode=OneWay}" />

        <!-- Help Text -->
        <TextBlock 
            x:Name="HelpText"
            FontSize="11"
            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            Text="{x:Bind HelpMessage, Mode=OneWay}"
            TextWrapping="Wrap"
            Visibility="{x:Bind ShowHelpText(HelpMessage), Mode=OneWay}" />
    </StackPanel>
</UserControl>
