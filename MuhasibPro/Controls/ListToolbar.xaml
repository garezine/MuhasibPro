<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MuhasibPro.Controls.ListToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MuhasibPro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="42">

    <CommandBar x:Name="commandBar" Height="42" Width="auto" DefaultLabelPosition="Right" Style="{StaticResource ToolBarStyle}" Background="Transparent">
        <AppBarButton x:Name="buttonCancel" Icon="Cancel" Label="İptal" LabelPosition="Default" HorizontalAlignment="Left" Style="{StaticResource ModernToolBarButtonStyle}" Tag="cancel" />
        <AppBarButton x:Name="buttonNew" Icon="Add" Label="{x:Bind NewLabel, Mode=OneWay}" LabelPosition="Default" HorizontalAlignment="Left" Style="{StaticResource ModernToolBarButtonStyle}" Tag="new" />
        <AppBarButton x:Name="buttonEdit" Icon="Edit" Label="Düzenle" LabelPosition="Default" HorizontalAlignment="Left" Style="{StaticResource ModernToolBarButtonStyle}" Tag="edit" />
        <AppBarButton x:Name="buttonDelete" Icon="Delete" Label="Sil" LabelPosition="Default" HorizontalAlignment="Left" Style="{StaticResource ModernToolBarButtonStyle}" Tag="delete" />
    <CommandBar.Content>
        <StackPanel Orientation="Horizontal">
            <AppBarButton x:Name="buttonSelect" Icon="List" Label="Label" LabelPosition="Collapsed" Style="{StaticResource ToolBarButtonCollapsedStyle}" Tag="select" />
            <AppBarButton x:Name="buttonRefresh" Icon="Refresh" Label="Label" LabelPosition="Collapsed" Style="{StaticResource ToolBarButtonCollapsedStyle}" Tag="refresh" />
            <local:Search x:Name="search"  Margin="6,-5,0,0" Query="{x:Bind Query, Mode=TwoWay}" Width="240" VerticalAlignment="Center" Tag="search" QuerySubmitted="OnQuerySubmitted" />
        </StackPanel>
    </CommandBar.Content>
</CommandBar>
</UserControl>
